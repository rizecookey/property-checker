ident remainder;

annotation RemainderTop() any :<==> "true" for "true";
annotation RemainderBottom() any :<==> "false" for "true";
    
annotation Remainder(int remainder, int modulus) int
    :<==> "java.lang.Math.floorMod(§subject§, §modulus§) == §remainder§"
    for "0 <= §remainder§ && §remainder§ < §modulus§";
    
relation Remainder(a,b) <: RemainderTop() :<==> "true";
relation RemainderBottom() <: Remainder(a,b) :<==> "true";

relation Remainder(subRemainder, subModulus) <: Remainder(superRemainder, superModulus)
    :<==> "§subModulus§ % §superModulus§ == 0 && java.lang.Math.floorMod(§subRemainder§, §superModulus§) == java.lang.Math.floorMod(§superRemainder§, §superModulus§)";

join Remainder(a, m), Remainder(b, n)
    := Remainder("java.lang.Math.floorMod(§a§, edu.kit.iti.checker.property.util.Math.gcd(§m§, §n§))", "edu.kit.iti.checker.property.util.Math.gcd(§m§, §n§)")
    for "java.lang.Math.floorMod(a, edu.kit.iti.checker.property.util.Math.gcd(§m§, §n§)) == java.lang.Math.floorMod(§b§, edu.kit.iti.checker.property.util.Math.gcd(§m§, §n§))";

meet Remainder(a, m), Remainder(b, n)
    := Remainder("(§a§ * edu.kit.iti.checker.property.util.Math.eea1(§m§,§n§) * n + b * edu.kit.iti.checker.property.util.Math.eea0(§m§,§n§) * §m§) / edu.kit.iti.checker.property.util.Math.gcd(§m§,§n§)", "edu.kit.iti.checker.property.util.Math.lcm(§m§,§n§)")
    for "java.lang.Math.floorMod(§a§, edu.kit.iti.checker.property.util.Math.gcd(§m§, §n§)) == java.lang.Math.floorMod(§b§, edu.kit.iti.checker.property.util.Math.gcd(§m§, §n§))";
    
join Remainder(a, m), Remainder(b, n)
    := Remainder("java.lang.Math.floorMod(§a§, edu.kit.iti.checker.property.util.Math.mcd(§m§,§n§,§a§,§b§))", "edu.kit.iti.checker.property.util.Math.mcd(§m§,§n§,§a§,§b§)");
    
meet Remainder(a, m), Remainder(b, n)
    := RemainderBottom();
